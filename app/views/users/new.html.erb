<h1>Sign Up</h1>

<% if @errors %>
 <% @errors.each do |error|%>
    <div class="alert alert-info"><%= error %></div>
  <%end%>
<% end %>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  
  <div>
    <%= f.submit "Sign up!" %>
  </div>
<% end %>